@page
@model Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}
<h2>Change Password</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="ChangePassword.CurrentPassword"></label>
        <input asp-for="ChangePassword.CurrentPassword" class="form-control" type="password" />
        <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChangePassword.NewPassword"></label>
        <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" />
        <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChangePassword.ConfirmNewPassword"></label>
        <input asp-for="ChangePassword.ConfirmNewPassword" class="form-control" type="password" />
        <span asp-validation-for="ChangePassword.ConfirmNewPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success mt-2">@Model.SuccessMessage</div>
    }
</form> 