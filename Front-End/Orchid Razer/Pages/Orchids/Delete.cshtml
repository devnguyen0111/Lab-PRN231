@page
@model Orchids.DeleteModel
@{
    ViewData["Title"] = "Delete Orchid";
}
<h2>Delete Orchid</h2>
<h3>Are you sure you want to delete this orchid?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Orchid?.OrchidName</dd>
            
            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Orchid?.OrchidDescription</dd>
            
            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@Model.Orchid?.Price.ToString("C")</dd>
            
            <dt class="col-sm-4">Type</dt>
            <dd class="col-sm-8">@(Model.Orchid?.IsNatural == true ? "Natural" : "Artificial")</dd>
            
            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Orchid?.CategoryName</dd>
        </dl>
        
        <form method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
    @if (!string.IsNullOrEmpty(Model.Orchid?.OrchidUrl))
    {
        <div class="col-md-6">
            <img src="@Model.Orchid.OrchidUrl" class="img-fluid" alt="@Model.Orchid.OrchidName" />
        </div>
    }
</div> 