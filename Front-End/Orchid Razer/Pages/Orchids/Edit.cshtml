@page
@model Orchids.EditModel
@{
    ViewData["Title"] = "Edit Orchid";
}
<h2>Edit Orchid</h2>
<form method="post">
    <input type="hidden" asp-for="Orchid.OrchidId" />
    <div class="form-group">
        <label asp-for="Orchid.OrchidName"></label>
        <input asp-for="Orchid.OrchidName" class="form-control" />
        <span asp-validation-for="Orchid.OrchidName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orchid.OrchidDescription"></label>
        <textarea asp-for="Orchid.OrchidDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Orchid.OrchidDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orchid.Price"></label>
        <input asp-for="Orchid.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Orchid.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orchid.IsNatural"></label>
        <input asp-for="Orchid.IsNatural" class="form-check-input" type="checkbox" />
        <span asp-validation-for="Orchid.IsNatural" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orchid.OrchidUrl"></label>
        <input asp-for="Orchid.OrchidUrl" class="form-control" />
        <span asp-validation-for="Orchid.OrchidUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Orchid.CategoryId"></label>
        <select asp-for="Orchid.CategoryId" class="form-control" asp-items="@Model.Categories">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="Orchid.CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
    }
</form> 