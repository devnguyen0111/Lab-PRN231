@page
@model Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>
<p>
    <a asp-page="./Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>@category.CategoryName</td>
            <td>
                <a asp-page="./Details" asp-route-id="@category.CategoryId" class="btn btn-info btn-sm">Details</a>
                <a asp-page="./Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                <form method="post" asp-page="./Delete" asp-route-id="@category.CategoryId" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    Page @Model.PageNumber of @Model.TotalPages
    @if (Model.HasPreviousPage)
    {
        <a href="?pageNumber=@(Model.PageNumber - 1)">Previous</a>
    }
    @if (Model.HasNextPage)
    {
        <a href="?pageNumber=@(Model.PageNumber + 1)">Next</a>
    }
</div> 